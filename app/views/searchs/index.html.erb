<div class="content">
  <h1>Alle Autoren [<%= @count %>]</h1>

  <table class="table">
    <thead>
      <tr class="title">
        <td align="left">Name</td>
        <td align="center"></td>
        <td align="center"></td>
      </tr>
    </thead>

    <tbody>
      <% @authors.each do |author| %>
        <tr>
          <td align="left" class="max"><%= author.name %></td>
          <td align="center">
            <%= link_to(image_tag("icon_show_inv.png", :class => 'max'), '/admin/authors/' + author.id.to_s) %>
          </td>
          <td align="center">
            <%= link_to(image_tag("icon_edit_inv.png", :class => 'max'), '/admin/authors/' + author.id.to_s + '/edit') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
