<%= form_for(@season) do |f| %>
  <% if @season.errors.any? %>
    <div class="error_explanation">
      <h2><%= @season.errors.count %> Fehler gefunden:</h2>

      <ul>
      <% @season.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <table class="form_table">
    <tr>
      <td>Nummer:</td>
      <td><%= f.number_field :number %></td>
    </tr>
  </table>
  <div class="actions">
    <%= f.submit "Speichern" %>
  </div>
<% end %>
