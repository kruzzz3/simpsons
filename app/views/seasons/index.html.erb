<div class="sub_navigation">
  <%= link_to(image_tag("icon_back_inv.png", :class => 'image-link') + raw('<span class="text-inv">Zur√ºck</span>'), '/admin') %>
  <span class="spacer">|</span>
  <%= link_to(image_tag("icon_new_inv.png", :class => 'image-link') + raw('<span class="text-inv">Neue Staffel</span>'), '/admin/seasons/new') %>
</div>
<div class="content">
  <h1>Alle Staffeln [<%= @count %>]</h1>

  <table class="table">
    <thead>
      <tr class="title">
        <td align="left">Nummer</td>
        <td align="center"></td>
        <td align="center"></td>
      </tr>
    </thead>

    <tbody>
      <% @seasons.each do |season| %>
        <tr>
          <td align="left" class="max"><%= season.number %></td>
          <td align="center">
            <%= link_to(image_tag("icon_show_inv.png", :class => 'max'), '/admin/seasons/' + season.id.to_s) %>
          </td>
          <td align="center">
            <%= link_to(image_tag("icon_edit_inv.png", :class => 'max'), '/admin/seasons/' + season.id.to_s + '/edit') %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
